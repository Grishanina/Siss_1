<Page x:Class="Siss.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Siss"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="26" HorizontalAlignment="Center" Margin="10,30">Авторизация</TextBlock>
            <TextBox x:Name="login" Width="240" FontSize="22" Margin="10"></TextBox>
            <TextBox x:Name="pass" Width="240" FontSize="22" Margin="10"></TextBox>
            <Button x:Name="go" Width="200" Height="40" Margin="0,30,0,10" FontSize="20" Click="go_Click">Вход</Button>
            <Button x:Name="goto" Width="200" Height="40" Margin="0,10,0,10" FontSize="20" Click="goto_Click">Перейти в каталог</Button>

        </StackPanel>
    </Grid>
</Page>
